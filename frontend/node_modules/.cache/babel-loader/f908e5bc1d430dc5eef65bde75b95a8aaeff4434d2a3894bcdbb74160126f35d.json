{"ast":null,"code":"import api from '@/services/api';\nexport default {\n  name: 'ProfileView',\n  data() {\n    return {\n      userProfile: {\n        firstName: '',\n        lastName: '',\n        email: '',\n        phone: '',\n        address: '',\n        status: ''\n      },\n      profilePictureUrl: null,\n      isLoading: false,\n      errors: {\n        firstName: '',\n        lastName: ''\n      },\n      alert: {\n        show: false,\n        message: '',\n        type: 'success'\n      }\n    };\n  },\n  computed: {\n    userInitial() {\n      return this.userProfile.email ? this.userProfile.email.charAt(0).toUpperCase() : '?';\n    },\n    statusClass() {\n      const status = this.userProfile.status;\n      if (!status) return 'status-unknown';\n      switch (status.toLowerCase()) {\n        case 'headman':\n          return 'status-headman';\n        case 'assistant':\n          return 'status-assistant';\n        case 'villager':\n          return 'status-villager';\n        case 'pending':\n          return 'status-pending';\n        default:\n          return 'status-unknown';\n      }\n    }\n  },\n  methods: {\n    async fetchUserProfile() {\n      try {\n        this.isLoading = true;\n        const response = await api.getUserProfile();\n        const userData = response.data.user;\n        this.userProfile = {\n          firstName: userData.first_name || '',\n          lastName: userData.last_name || '',\n          email: userData.user_email || '',\n          phone: userData.phone || '',\n          address: userData.address || '',\n          status: userData.status || ''\n        };\n\n        // Check for profile picture\n        if (userData.profile_picture) {\n          // Append timestamp to URL to prevent caching\n          const timestamp = new Date().getTime();\n          const profileUrl = `${userData.profile_picture}?t=${timestamp}`;\n          this.profilePictureUrl = profileUrl;\n          localStorage.setItem('profilePictureUrl', profileUrl);\n        } else {\n          // Try to get from localStorage as fallback\n          const storedPictureUrl = localStorage.getItem('profilePictureUrl');\n          const storedPictureData = localStorage.getItem('profilePhoto');\n          if (storedPictureUrl) {\n            this.profilePictureUrl = storedPictureUrl;\n          } else if (storedPictureData) {\n            this.profilePictureUrl = storedPictureData;\n          }\n        }\n      } catch (error) {\n        console.error('Error fetching user profile:', error);\n        this.showAlert('ไม่สามารถดึงข้อมูลโปรไฟล์ได้ กรุณาลองใหม่อีกครั้ง', 'error');\n      } finally {\n        this.isLoading = false;\n      }\n    },\n    validateForm() {\n      let isValid = true;\n      this.errors = {\n        firstName: '',\n        lastName: ''\n      };\n      if (!this.userProfile.firstName.trim()) {\n        this.errors.firstName = 'กรุณากรอกชื่อ';\n        isValid = false;\n      }\n      if (!this.userProfile.lastName.trim()) {\n        this.errors.lastName = 'กรุณากรอกนามสกุล';\n        isValid = false;\n      }\n      return isValid;\n    },\n    async saveProfile() {\n      if (!this.validateForm()) {\n        return;\n      }\n      try {\n        this.isLoading = true;\n        const response = await api.updateUserProfile({\n          firstName: this.userProfile.firstName,\n          lastName: this.userProfile.lastName,\n          phone: this.userProfile.phone,\n          address: this.userProfile.address\n        });\n        console.log('Profile updated:', response.data);\n        this.showAlert('อัปเดตโปรไฟล์เรียบร้อยแล้ว', 'success');\n      } catch (error) {\n        console.error('Error updating profile:', error);\n        this.showAlert('ไม่สามารถอัปเดตโปรไฟล์ได้ กรุณาลองใหม่อีกครั้ง', 'error');\n      } finally {\n        this.isLoading = false;\n      }\n    },\n    triggerPhotoUpload() {\n      this.$refs.photoInput.click();\n    },\n    async handlePhotoUpload(event) {\n      const file = event.target.files[0];\n      if (!file) return;\n\n      // Show loading alert\n      this.showAlert('กำลังอัปโหลดรูปโปรไฟล์...', 'info');\n\n      // Convert file to base64 and upload\n      const reader = new FileReader();\n      reader.onload = async e => {\n        try {\n          const photoData = e.target.result;\n\n          // Show preview immediately\n          this.profilePictureUrl = photoData;\n          localStorage.setItem('profilePhoto', photoData);\n\n          // Get user ID from localStorage\n          const userId = localStorage.getItem('userId');\n\n          // Upload to server\n          const response = await fetch(`/api/auth/upload-profile-picture/${userId}`, {\n            method: 'POST',\n            headers: {\n              'Authorization': `Bearer ${localStorage.getItem('token')}`,\n              'Content-Type': 'application/json'\n            },\n            body: JSON.stringify({\n              imageData: photoData\n            })\n          });\n          if (response.ok) {\n            const data = await response.json();\n            console.log('Profile picture uploaded:', data);\n            if (data.profilePictureUrl) {\n              // Append timestamp to URL to prevent caching\n              const timestamp = new Date().getTime();\n              const profileUrl = `${data.profilePictureUrl}?t=${timestamp}`;\n              this.profilePictureUrl = profileUrl;\n              localStorage.setItem('profilePictureUrl', profileUrl);\n\n              // Force reload profile picture\n              const img = new Image();\n              img.src = profileUrl;\n            }\n            this.showAlert('อัปโหลดรูปโปรไฟล์เรียบร้อยแล้ว', 'success');\n\n            // Refresh profile data\n            this.fetchUserProfile();\n\n            // Dispatch event to update profile in App.vue\n            window.dispatchEvent(new Event('profile-updated'));\n\n            // Force reload the page to update all components\n            setTimeout(() => {\n              window.location.reload();\n            }, 1000);\n          } else {\n            const errorData = await response.json();\n            console.error('Failed to upload profile picture:', errorData);\n            this.showAlert(`ไม่สามารถอัปโหลดรูปโปรไฟล์ได้: ${errorData.message || response.statusText}`, 'error');\n          }\n        } catch (error) {\n          console.error('Error uploading profile picture:', error);\n          this.showAlert('ไม่สามารถอัปโหลดรูปโปรไฟล์ได้: ' + (error.message || 'เกิดข้อผิดพลาดที่ไม่ทราบสาเหตุ'), 'error');\n        }\n      };\n      reader.readAsDataURL(file);\n    },\n    formatStatus(status) {\n      if (!status) return 'ไม่ทราบสถานะ';\n      const statusMap = {\n        'headman': 'ผู้ใหญ่บ้าน',\n        'assistant': 'ผู้ช่วยผู้ใหญ่บ้าน',\n        'villager': 'ลูกบ้าน',\n        'pending': 'รอการอนุมัติ'\n      };\n      return statusMap[status.toLowerCase()] || status.charAt(0).toUpperCase() + status.slice(1);\n    },\n    showAlert(message, type = 'success') {\n      this.alert = {\n        show: true,\n        message,\n        type\n      };\n\n      // Hide alert after 3 seconds\n      setTimeout(() => {\n        this.alert.show = false;\n      }, 3000);\n    },\n    getFullImageUrl(url) {\n      if (!url) return '';\n\n      // If it's a data URL (base64), return as is\n      if (url.startsWith('data:')) {\n        return url;\n      }\n\n      // If it's a relative URL, prepend the API base URL\n      if (url.startsWith('/')) {\n        // Add a timestamp to prevent caching\n        const timestamp = new Date().getTime();\n        return `${process.env.VUE_APP_API_URL || 'http://localhost:5000'}${url}?t=${timestamp}`;\n      }\n\n      // If it's an https URL (like picsum.photos), return as is\n      if (url.startsWith('http')) {\n        return url;\n      }\n\n      // Otherwise, return the URL as is\n      return url;\n    },\n    handleImageError(e) {\n      console.error('Error loading image:', e);\n      console.log('Failed image URL:', e.target.src);\n\n      // Try to load the image directly from the server\n      const url = e.target.src;\n      if (url.includes('/uploads/')) {\n        const imagePath = url.split('?')[0]; // Remove query parameters\n        const newUrl = `http://localhost:5000${imagePath.substring(imagePath.indexOf('/uploads/'))}`;\n        console.log('Trying alternative URL:', newUrl);\n        e.target.src = newUrl;\n        return;\n      }\n\n      // If image fails to load, fall back to placeholder\n      this.profilePictureUrl = null;\n    }\n  },\n  mounted() {\n    this.fetchUserProfile();\n  }\n};","map":{"version":3,"names":["api","name","data","userProfile","firstName","lastName","email","phone","address","status","profilePictureUrl","isLoading","errors","alert","show","message","type","computed","userInitial","charAt","toUpperCase","statusClass","toLowerCase","methods","fetchUserProfile","response","getUserProfile","userData","user","first_name","last_name","user_email","profile_picture","timestamp","Date","getTime","profileUrl","localStorage","setItem","storedPictureUrl","getItem","storedPictureData","error","console","showAlert","validateForm","isValid","trim","saveProfile","updateUserProfile","log","triggerPhotoUpload","$refs","photoInput","click","handlePhotoUpload","event","file","target","files","reader","FileReader","onload","e","photoData","result","userId","fetch","method","headers","body","JSON","stringify","imageData","ok","json","img","Image","src","window","dispatchEvent","Event","setTimeout","location","reload","errorData","statusText","readAsDataURL","formatStatus","statusMap","slice","getFullImageUrl","url","startsWith","process","env","VUE_APP_API_URL","handleImageError","includes","imagePath","split","newUrl","substring","indexOf","mounted"],"sources":["C:\\Users\\HP\\Documents\\mooban4\\frontend\\src\\views\\ProfileView.vue"],"sourcesContent":["<template>\r\n  <div class=\"profile-container\">\r\n    <h1>โปรไฟล์ของฉัน</h1>\r\n    \r\n    <div class=\"profile-card\">\r\n      <div class=\"profile-header\">\r\n        <div class=\"profile-photo\">\r\n          <div v-if=\"profilePictureUrl\" class=\"photo-container\">\r\n            <img :src=\"getFullImageUrl(profilePictureUrl)\" alt=\"Profile Photo\" @error=\"handleImageError\">\r\n          </div>\r\n          <div v-else class=\"photo-placeholder\">\r\n            {{ userInitial }}\r\n          </div>\r\n          <input \r\n            type=\"file\" \r\n            ref=\"photoInput\" \r\n            style=\"display: none;\" \r\n            accept=\"image/*\"\r\n            @change=\"handlePhotoUpload\"\r\n          >\r\n          <button @click=\"triggerPhotoUpload\" class=\"upload-btn\">อัปโหลดรูปภาพ</button>\r\n        </div>\r\n      </div>\r\n      \r\n      <div class=\"profile-form\">\r\n        <div class=\"form-group\">\r\n          <label for=\"firstName\">ชื่อ</label>\r\n          <input \r\n            type=\"text\" \r\n            id=\"firstName\" \r\n            v-model=\"userProfile.firstName\" \r\n            :class=\"{ 'is-invalid': errors.firstName }\"\r\n          >\r\n          <div v-if=\"errors.firstName\" class=\"error-message\">{{ errors.firstName }}</div>\r\n        </div>\r\n        \r\n        <div class=\"form-group\">\r\n          <label for=\"lastName\">นามสกุล</label>\r\n          <input \r\n            type=\"text\" \r\n            id=\"lastName\" \r\n            v-model=\"userProfile.lastName\" \r\n            :class=\"{ 'is-invalid': errors.lastName }\"\r\n          >\r\n          <div v-if=\"errors.lastName\" class=\"error-message\">{{ errors.lastName }}</div>\r\n        </div>\r\n        \r\n        <div class=\"form-group\">\r\n          <label for=\"email\">อีเมล</label>\r\n          <input \r\n            type=\"email\" \r\n            id=\"email\" \r\n            v-model=\"userProfile.email\" \r\n            readonly\r\n            class=\"readonly-field\"\r\n          >\r\n        </div>\r\n        \r\n        <div class=\"form-group\">\r\n          <label for=\"phone\">เบอร์โทรศัพท์</label>\r\n          <input \r\n            type=\"tel\" \r\n            id=\"phone\" \r\n            v-model=\"userProfile.phone\"\r\n          >\r\n        </div>\r\n        \r\n        <div class=\"form-group\">\r\n          <label for=\"address\">ที่อยู่</label>\r\n          <textarea \r\n            id=\"address\" \r\n            v-model=\"userProfile.address\"\r\n            rows=\"3\"\r\n          ></textarea>\r\n        </div>\r\n        \r\n        <div class=\"form-group\">\r\n          <label>สถานะ</label>\r\n          <div class=\"status-badge\" :class=\"statusClass\">\r\n            {{ formatStatus(userProfile.status) }}\r\n          </div>\r\n        </div>\r\n        \r\n        <div class=\"form-actions\">\r\n          <button \r\n            @click=\"saveProfile\" \r\n            class=\"save-btn\" \r\n            :disabled=\"isLoading\"\r\n          >\r\n            <span v-if=\"isLoading\">กำลังบันทึก...</span>\r\n            <span v-else>บันทึกข้อมูล</span>\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    \r\n    <!-- Success/Error Alert -->\r\n    <div v-if=\"alert.show\" class=\"alert\" :class=\"alert.type\">\r\n      {{ alert.message }}\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport api from '@/services/api';\r\n\r\nexport default {\r\n  name: 'ProfileView',\r\n  data() {\r\n    return {\r\n      userProfile: {\r\n        firstName: '',\r\n        lastName: '',\r\n        email: '',\r\n        phone: '',\r\n        address: '',\r\n        status: ''\r\n      },\r\n      profilePictureUrl: null,\r\n      isLoading: false,\r\n      errors: {\r\n        firstName: '',\r\n        lastName: ''\r\n      },\r\n      alert: {\r\n        show: false,\r\n        message: '',\r\n        type: 'success'\r\n      }\r\n    };\r\n  },\r\n  computed: {\r\n    userInitial() {\r\n      return this.userProfile.email ? this.userProfile.email.charAt(0).toUpperCase() : '?';\r\n    },\r\n    statusClass() {\r\n      const status = this.userProfile.status;\r\n      if (!status) return 'status-unknown';\r\n      \r\n      switch(status.toLowerCase()) {\r\n        case 'headman': return 'status-headman';\r\n        case 'assistant': return 'status-assistant';\r\n        case 'villager': return 'status-villager';\r\n        case 'pending': return 'status-pending';\r\n        default: return 'status-unknown';\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    async fetchUserProfile() {\r\n      try {\r\n        this.isLoading = true;\r\n        const response = await api.getUserProfile();\r\n        const userData = response.data.user;\r\n        \r\n        this.userProfile = {\r\n          firstName: userData.first_name || '',\r\n          lastName: userData.last_name || '',\r\n          email: userData.user_email || '',\r\n          phone: userData.phone || '',\r\n          address: userData.address || '',\r\n          status: userData.status || ''\r\n        };\r\n        \r\n        // Check for profile picture\r\n        if (userData.profile_picture) {\r\n          // Append timestamp to URL to prevent caching\r\n          const timestamp = new Date().getTime();\r\n          const profileUrl = `${userData.profile_picture}?t=${timestamp}`;\r\n\r\n          this.profilePictureUrl = profileUrl;\r\n          localStorage.setItem('profilePictureUrl', profileUrl);\r\n        } else {\r\n          // Try to get from localStorage as fallback\r\n          const storedPictureUrl = localStorage.getItem('profilePictureUrl');\r\n          const storedPictureData = localStorage.getItem('profilePhoto');\r\n\r\n          if (storedPictureUrl) {\r\n            this.profilePictureUrl = storedPictureUrl;\r\n          } else if (storedPictureData) {\r\n            this.profilePictureUrl = storedPictureData;\r\n          }\r\n        }\r\n      } catch (error) {\r\n        console.error('Error fetching user profile:', error);\r\n        this.showAlert('ไม่สามารถดึงข้อมูลโปรไฟล์ได้ กรุณาลองใหม่อีกครั้ง', 'error');\r\n      } finally {\r\n        this.isLoading = false;\r\n      }\r\n    },\r\n    \r\n    validateForm() {\r\n      let isValid = true;\r\n      this.errors = {\r\n        firstName: '',\r\n        lastName: ''\r\n      };\r\n      \r\n      if (!this.userProfile.firstName.trim()) {\r\n        this.errors.firstName = 'กรุณากรอกชื่อ';\r\n        isValid = false;\r\n      }\r\n      \r\n      if (!this.userProfile.lastName.trim()) {\r\n        this.errors.lastName = 'กรุณากรอกนามสกุล';\r\n        isValid = false;\r\n      }\r\n      \r\n      return isValid;\r\n    },\r\n    \r\n    async saveProfile() {\r\n      if (!this.validateForm()) {\r\n        return;\r\n      }\r\n      \r\n      try {\r\n        this.isLoading = true;\r\n        \r\n        const response = await api.updateUserProfile({\r\n          firstName: this.userProfile.firstName,\r\n          lastName: this.userProfile.lastName,\r\n          phone: this.userProfile.phone,\r\n          address: this.userProfile.address\r\n        });\r\n        \r\n        console.log('Profile updated:', response.data);\r\n        this.showAlert('อัปเดตโปรไฟล์เรียบร้อยแล้ว', 'success');\r\n      } catch (error) {\r\n        console.error('Error updating profile:', error);\r\n        this.showAlert('ไม่สามารถอัปเดตโปรไฟล์ได้ กรุณาลองใหม่อีกครั้ง', 'error');\r\n      } finally {\r\n        this.isLoading = false;\r\n      }\r\n    },\r\n    \r\n    triggerPhotoUpload() {\r\n      this.$refs.photoInput.click();\r\n    },\r\n    \r\n    async handlePhotoUpload(event) {\r\n      const file = event.target.files[0];\r\n      if (!file) return;\r\n\r\n      // Show loading alert\r\n      this.showAlert('กำลังอัปโหลดรูปโปรไฟล์...', 'info');\r\n\r\n      // Convert file to base64 and upload\r\n      const reader = new FileReader();\r\n      reader.onload = async (e) => {\r\n        try 
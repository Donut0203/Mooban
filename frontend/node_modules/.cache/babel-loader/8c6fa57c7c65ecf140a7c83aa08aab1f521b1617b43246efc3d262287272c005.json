iv class=\"profile-image\">\r\n            <img :src=\"profileImageUrl || 'https://via.placeholder.com/256x256?text=Profile'\" alt=\"Profile Image\">\r\n          </div>\r\n          <div class=\"profile-info\">\r\n            <h3>{{ userFullName || userEmail || 'Natcha Boonmee' }}</h3>\r\n            <span class=\"user-role\" :class=\"'role-' + userStatus\">{{ formatRole(userStatus) }}</span>\r\n            <router-link to=\"/profile\" class=\"edit-profile-btn\">แก้ไขโปรไฟล์</router-link>\r\n          </div>\r\n        </div>\r\n        <div class=\"sidebar-menu\">\r\n          <router-link to=\"/profile\" class=\"sidebar-menu-item\">User Profile</router-link>\r\n          <router-link to=\"/pending-users\" class=\"sidebar-menu-item\">Pending Users</router-link>\r\n          <router-link v-if=\"isHeadmanOrAssistant\" to=\"/all-users\" class=\"sidebar-menu-item\">User Management</router-link>\r\n          <router-link to=\"/\" class=\"sidebar-menu-item\">แดชบอร์ด</router-link>\r\n        </div>\r\n      </div>\r\n      \r\n      <!-- Main content area -->\r\n      <div class=\"main-content-area\">\r\n        <nav class=\"top-nav\">\r\n          <div class=\"nav-container\">\r\n            <h2>Village Management System</h2>\r\n            <button class=\"logout-btn\" @click=\"logout\">Logout</button>\r\n          </div>\r\n        </nav>\r\n\r\n        <div class=\"content-wrapper\">\r\n          <router-view @user-approved=\"fetchPendingUsers\"/>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <router-view v-else @user-approved=\"fetchPendingUsers\"/>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport api from '@/services/api';\r\n\r\nexport default {\r\n  name: 'App',\r\n  data() {\r\n    return {\r\n      pendingUsers: [],\r\n      userEmail: localStorage.getItem('email') || '',\r\n      userStatus: localStorage.getItem('userStatus') || '',\r\n      userFullName: 'Natcha Boonmee',\r\n      profileImageUrl: localStorage.getItem('profileImage') || ''\r\n    };\r\n  },\r\n  computed: {\r\n    isLoggedIn() {\r\n      return !!localStorage.getItem('token');\r\n    },\r\n    isHeadmanOrAssistant() {\r\n      return ['headman', 'assistant'].includes(this.userStatus);\r\n    }\r\n  },\r\n  methods: {\r\n    formatRole(role) {\r\n      return role ? role.charAt(0).toUpperCase() + role.slice(1) : 'User';\r\n    },\r\n    async fetchPendingUsers() {\r\n      if (!this.isLoggedIn || !this.isHeadmanOrAssistant) return;\r\n      try {\r\n        const response = await api.getPendingUsers();\r\n        this.pendingUsers = response.data.pendingUsers || [];\r\n      } catch (error) {\r\n        console.error('Error fetching pending users:', error);\r\n      }\r\n    },\r\n    logout() {\r\n      ['token', 'email', 'userStatus'].forEach(item => localStorage.removeItem(item));\r\n      this.$router.push('/login');\r\n    }\r\n  },\r\n  mounted() {\r\n    if (this.isLoggedIn) {\r\n      this.fetchPendingUsers();\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style>\r\n#app {\r\n  font-family: Avenir, Helvetica, Arial, sans-serif;\r\n  color: #2c3e50;\r\n  height: 100vh;\r\n}\r\n.app-container {\r\n  display: flex;\r\n  height: 100vh;\r\n}\r\n.sidebar-nav {\r\n  width: 250px;\r\n  background-color: #343a40;\r\n  color: white;\r\n  height: 100vh;\r\n  position: fixed;\r\n}\r\n.profile-image img {\r\n  width: 100%;\r\n  height: 100%;\r\n  object-fit: cover;\r\n}\r\n.top-nav {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  padding: 10px;\r\n  background: #007bff;\r\n  color: white;\r\n}\r\n.logout-btn {\r\n  background: red;\r\n  color: white;\r\n  padding: 5px 10px;\r\n  border: none;\r\n  cursor: pointer;\r\n}\r\n</style>"],"mappings":"AA0CA,OAAOA,GAAE,MAAO,gBAAgB;AAEhC,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAE,EAAE;MAChBC,SAAS,EAAEC,YAAY,CAACC,OAAO,CAAC,OAAO,KAAK,EAAE;MAC9CC,UAAU,EAAEF,YAAY,CAACC,OAAO,CAAC,YAAY,KAAK,EAAE;MACpDE,YAAY,EAAE,gBAAgB;MAC9BC,eAAe,EAAEJ,YAAY,CAACC,OAAO,CAAC,cAAc,KAAK;I